/* 
Como testar as funcoes {arquivos main()}
#include <stdio.h>
#include <string.h>

-----------------------------------------------------------------------

    memcpy
    char source[] = "Origem";
    char destination[20];
    memcpy(destination, source, strlen(source) + 1);
    printf("Exemplo com memcpy: %s\n", destination);


    memset
    char buffer[10];
    memset(buffer, 'A', sizeof(buffer));
    printf("Exemplo com memset: %s\n", buffer);


    memcmp
    char str1[] = "Hello";
    char str2[] = "World";
    int result = memcmp(str1, str2, 5);
    if (result == 0) {
        printf("Exemplo com memcmp: As strings são iguais.\n");
    } else {
        printf("Exemplo com memcmp: As strings são diferentes.\n");
    }


    memmove
    char data[] = "ABCDEFG";
    memmove(data + 2, data, 4);
    printf("Exemplo com memmove: %s\n", data);


    memchr
    const char *text = "Encontre o 'o' nesta string.";
    char search_char = 'o';
    const char *result_ptr = (const char *)memchr(text, search_char, strlen(text));
    if (result_ptr != NULL) {
        printf("Exemplo com memchr: Caractere '%c' encontrado na posição %ld.\n", search_char, result_ptr - text);
    } else {
        printf("Exemplo com memchr: Caractere '%c' não encontrado na string.\n", search_char);
    }


//------------------------------------------------------------------
